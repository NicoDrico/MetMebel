<Window x:Class="Mebel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mebel"
        mc:Ignorable="d"
        Title="MainWindow" Height="382" Width="613" WindowStyle="None">
    <Grid HorizontalAlignment="Center" Width="612" Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Image Height="41" Margin="10,10,0,0" VerticalAlignment="Top" Source="/logo.png" HorizontalAlignment="Left" Width="294">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/logo.png"/>
            </Image.OpacityMask>
        </Image>
        <Label Content="Войти в систему" HorizontalAlignment="Left" Margin="146,61,0,0" VerticalAlignment="Top" Width="158" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24" RenderTransformOrigin="0.573,0.408" Height="40"/>
        <Button x:Name="Авторизоваться" Content="Авторизоваться" HorizontalAlignment="Left" Margin="137,244,0,0" VerticalAlignment="Top" Width="146" Height="38" Background="#FFFCE866" FontWeight="Bold" FontStyle="Italic" FontSize="16" Click="Авторизоваться_Click"/>
        <Label Content="Введите данные для входа в приложение" Margin="89,101,0,0" VerticalAlignment="Top" FontFamily="Perpetua Titling MT" FontStyle="Italic" HorizontalAlignment="Left" Width="242" Height="24"/>
        <TextBox x:Name="NamePersonal" HorizontalAlignment="Left" Margin="117,138,0,0" TextWrapping="Wrap" Text="Имя пользователя&#xD;&#xA;" VerticalAlignment="Top" Width="186" Height="32" SelectionBrush="#FF81C3F7" Background="#fffff0" FontStyle="Italic"/>
        <TextBlock x:Name="Восстановить" Text="Восстановить пароль" Margin="117,298,306,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="16" TextDecorations="Underline" MouseDown="Восстановить_MouseDown" Cursor="Hand" />
        <PasswordBox x:Name="PasswordPersonal" HorizontalAlignment="Left" Margin="117,188,0,0" VerticalAlignment="Top" Width="186" Height="32" SelectionBrush="#FF81C3F7" Background="#fffff0"/>
        <Button x:Name="AddP" Content="Добавить работника" HorizontalAlignment="Left" Margin="365,154,0,0" VerticalAlignment="Top" Width="184" Height="38" Background="#FFFCE866" FontWeight="Bold" FontStyle="Italic" FontSize="16" Click="Добавить_Click"/>
        <Image Height="32" Margin="70,138,0,0" VerticalAlignment="Top" Source="/icons8-пользователь-мужчина-в-кружке.gif" HorizontalAlignment="Left" Width="34" RenderTransformOrigin="1.652,0.085">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/logo.png"/>
            </Image.OpacityMask>
        </Image>
        <Image Height="32" Margin="70,188,0,0" VerticalAlignment="Top" Source="/icons8-пароль-50.png" HorizontalAlignment="Left" Width="34" RenderTransformOrigin="1.652,0.085">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/logo.png"/>
            </Image.OpacityMask>
        </Image>
        <Label Visibility="Visible" HorizontalAlignment="Left" Margin="547,10,0,338" MouseDown="CloseWindow" Width="24" RenderTransformOrigin="0.53,1.631">
            <Label.Background>
                <ImageBrush ImageSource="/icons8-удалить.gif"/>
            </Label.Background>
        </Label>
    </Grid>
</Window>
